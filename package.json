{
  "name": "@musistudio/claude-code-router",
  "version": "1.0.55",
  "description": "Use Claude Code without an Anthropics account and route it to another LLM provider",
  "bin": {
    "ccr": "dist/cli.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "release": "npm run build && npm publish",
    "postinstall": "node scripts/replace-llms-entry.js",
    "dev": "nodemon --exec ts-node src/cli.ts"
  },
  "keywords": [
    "claude",
    "code",
    "router",
    "llm",
    "anthropic"
  ],
  "author": "musistudio",
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@musistudio/llms": "^1.0.35",
    "dotenv": "^16.4.7",
    "find-process": "^2.0.0",
    "json5": "^2.2.3",
    "minimist": "^1.2.8",
    "openurl": "^1.1.1",
    "rotating-file-stream": "^3.2.7",
    "shell-quote": "^1.8.3",
    "tiktoken": "^1.0.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.6.2",
    "@types/shell-quote": "^1.7.5",
    "esbuild": "^0.25.10",
    "fastify": "^5.4.0",
    "nodemon": "^3.1.10",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "ignore": [
      "!build/",
      "src/",
      "screenshots/"
    ]
  }
}